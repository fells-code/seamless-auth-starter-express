{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "models/**/*",
    "migrations/**/*",
    "seeders/**/*",
    "config/**/*"
  ],

  "exclude": ["dist", "node_modules"]
}
